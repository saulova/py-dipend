  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "pytest",
      "justMyCode": false,
      "args": [
          "-vv",
          "-s"
      ]
    },
    {
      "name": "Unit Tests Only Marked",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "pytest",
      "justMyCode": false,
      "args": [
          "-vv",
          "-s",
          "-m",
          "only"
      ]
    }
  ]
}